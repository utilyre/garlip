root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_style = tab

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.sql]
indent_style = space
indent_size = 4

[*.{html,css,json}]
indent_style = space
indent_size = 2

[*.{js,ts,mjs,jsx,tsx}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4
